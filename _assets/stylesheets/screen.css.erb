footer {
  clear: both;
  height: 35px;
  min-height: 35px;
  background-color: #272B33;
  color: white;
}

footer #footer_text {
  padding-left: 25px;
  padding-top: 6px;
}

#tags, #authors, #search_results {
  display: none;
}

/**
 * =Headers
 ***************************/
.header {
  background: white;
}
header {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 500;
  overflow: visible;
  -moz-box-shadow: 0 1px 0 rgba(0,0,0,.2),0 2px 7px rgba(0,0,0,.15);
  -webkit-box-shadow: 0 1px 0 rgba(0,0,0,.2),0 2px 7px rgba(0,0,0,.15);
  box-shadow: 0 1px 0 rgba(0,0,0,.2),0 2px 7px rgba(0,0,0,.15);
  z-index: 1000;
  -webkit-transform: translate3d(0,0,0);
  -moz-transform: translate3d(0,0,0);
  -ms-transform: translate3d(0,0,0);
  -o-transform: translate3d(0,0,0);
  transform: translate3d(0,0,0);
}
header#main {
  margin-bottom: 30px;
}
header.wider.container {
  width: 120%;
}
h1 {
  font-size: 32px;
  padding: 0;
  margin: 0;
}
h1.serious-font {
  font-family: serif;
  color: #111;
  font-weight: 400;
}
h3, h4 {
    margin: 0;
    padding: 0;
}
h2 {
  font-size: 20px;
  padding: 0px 5px 5px 0px;
  margin: 5px 0px;
}
h3 {
    font-size: 15px;
    padding-bottom: 3px;
}
h4, .item_meta {
    font-size: 13px;
    color: #777;

}
.item_meta {
    padding-bottom: 30px;
}
.solid-line {
  width: 100%;
  height: 10px;
  background-color: #F79837;
  margin-top: 7px;
}
/**
 * =Links
 ***************************/
a {
  color: #2B7598;
  text-decoration: none;
}
a:hover {
  color: #000;
  text-decoration: underline;
}
h1 a, h1 a:hover {
    color: #fff;
    text-decoration: none;
    background: none;
    padding: 0;
    margin: 0;
}
h1 a:hover {
    color: #fff;
    text-decoration: underline;
}

/**
 * =Misc
 ***************************/


code {
  font-family: Monaco, 'Courier New', Courier;
  font-size: 11px;
  color: #000;
}

pre {
  background-color: rgba(216, 216, 215, 0.36);
  padding: 1em 1em;
  margin: 10px 25px 10px 20px;
  line-height: 1.4;
  overflow: auto;
  display: block;
}

a > code {
  color: #2B7598;
}

blockquote {
  color: #000;
}


ul {
  list-style-type: none;
  padding-left: 0;
  }

#navigator ul {
  position: relative;
  list-style-type: none;
  text-align: left;
  padding: 0;
  margin-bottom: 20px;
  margin-top: 0px;
}

#navigator li {
  display: inline;
}
 
li {
  line-height: 18px;
  margin-bottom: 5px;
}


/**
 * =Errors
 ***************************/

.ror_error {
  font-size: 10px;
  color: red;
}
#comments .errorExplanation {
    font-size: 11px;
    line-height: 16px;
    color: #bd0200;
    padding: 10px;
  border: 1px solid #bd0200;
  margin: 5px 0;
  background-color: #fffaf9;
}
