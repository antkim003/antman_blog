

/**
 * =Body
 ***************************/
body {
  font: 300 16px "Helvetica",Arial,Verdana,sans-serif;;
  margin: 0px;
  padding: 0px;
  color: #4c4c4c;
  background-repeat: repeat;
  text-align: center;
  z-index: 1;
  background-color: #f1f1f1;
}


/**
 * =Layout
 ***************************/
.white {
  background: white;
}
#box {
  text-align: left;
}

html>body #box {
  width: 100%;
}

#wrapper {
  padding: 3.5%;
}

#content {
  text-align: left;
  float: center;
  padding: 10px 15px 10px 15px;
  margin: auto;
  background: white;
  overflow: visible;
  -moz-box-shadow: 0 1px 0 rgba(0,0,0,.2),0 2px 7px rgba(0,0,0,.15);
  -webkit-box-shadow: 0 1px 0 rgba(0,0,0,.2),0 2px 7px rgba(0,0,0,.15);
  box-shadow: 0 1px 0 rgba(0,0,0,.2),0 2px 7px rgba(0,0,0,.15);
  z-index: 1000;
  -webkit-transform: translate3d(0,0,0);
  -moz-transform: translate3d(0,0,0);
  -ms-transform: translate3d(0,0,0);
  -o-transform: translate3d(0,0,0);
  transform: translate3d(0,0,0);
}

html>body #content {
  line-height: 18px;
}

